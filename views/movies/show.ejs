<body>
  <%- include('../patials/nav-bar.ejs')  %>
<div class="wrapper">
    <div class="container justify-content-center">
       
        <div class="row py-3 mx-auto justify-content-center">
            <div class="col-sm-5 col-md-6 col-8 align-self-center ">
                <img class="img-fluid " style="width: 30rem; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);" src="<%= collection.poster %> " alt="">
            </div>
            <div class="col-sm-5 offset-sm-2 col-md-6 offset-md-0 align-self-center mt-3">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= collection.teaser %> " allowfullscreen></iframe>
                </div>
                 
                <div class="card mt-3">
                    <div class="card-body">
                        <h4 class="card-title text-center"><%= collection.name  %></h4>
                        <h6 class="card-title"><i class="fas fa-tags">&nbsp&nbsp</i>Genre&nbsp: <%= collection.genre %></h6>
                        <h6 class="card-title"><i class="fas fa-eye">&nbsp&nbsp</i>Rate&nbsp&nbsp&nbsp&nbsp: <%= collection.rate %></h6>
                        <h6 class="card-title"><i class="fas fa-stopwatch">&nbsp&nbsp&nbsp</i>Time&nbsp&nbsp&nbsp: <%= collection.time %> Mins</h6>
                        <h6 class="card-title"><img src="/images/images.png" width="50px" alt=""></h6>
                        <form class=" text-center"  action="/account/<%= collection._id %>?name=<%= collection.name %>&poster=<%= collection.poster %>  " method="post">
                          <!-- <a class="btn btn-danger" href="/movies/<%= collection._id %>/addtolist"><i class="fas fa-plus"></i> MY List</a> -->
                          <input class="btn btn-danger" type="submit"  value='+MY List'>
                        </form>
                      </div>
                      
                </div>

                  
                 
                
            </div>
          </div>       
            
  </div>
  </div>

  <div class="wrapper">
    <div class="container py-3 ">
      <div class="row justify-content-center">
        <div class="col-md-4 btn-group" data-toggle="buttons">
          
            
            <a class="btn btn-secondary" href="?path=showtime">Showtime</a>

            <a class="btn btn-secondary" href="?path=infomation">Infomations</a>

            <a class="btn btn-secondary" href="?path=review">Reviews</a>
          
          
        </div>
      </div>
      
      <% if(query.path){  %>
        <% if(query.path=="infomation") {  %>
      
        <%- include('movies_patials/info.ejs')  %> 
      
        <% }else if(query.path=="review"){ %> 
      
        <%- include('movies_patials/reviews.ejs')  %> 
      
        <% }else if(query.path=="showtime"){ %> 
      
        <%- include('movies_patials/showtimes.ejs')  %> 
      

      <% }}; %> 

    </div>
  </div>  
</body>
