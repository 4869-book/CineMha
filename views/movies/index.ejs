<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
   

    <style>
		img {
  			-webkit-user-drag: none;
  			-moz-user-drag: none;
  			-o-user-drag: none;
		}
		img {
			pointer-events: none;
		}

		.movie_card{
			padding: 0 !important;
			width: 15rem;
			margin:14px; 
			border-radius: 120px;
			box-shadow: 0 3px 4px 0 rgba(0, 0, 0, 0.2), 0 4px 15px 0 rgba(0, 0, 0, 0.19);
		}
		.movie_card img{
			width: 83%;
			max-height: 20rem;
		}
		.movie_info{
			color: #5e5c5c;
		}

		.movie_info i{
			font-size: 20px;
		}
		.card-title{
			width: 80%;
			height: 4rem;
		}
		.play_button{
			background-color: rgb(8, 165, 185);
   			position: absolute;
			width: 60px;
			height: 60px;
			border-radius: 50%;
			right: 20px;
			bottom: 111px;
			font-size: 27px;
			padding-left: 21px;
			padding-top: 16px;
			color: #FFFFFF;
			cursor: pointer;
		}
    </style>

    <title>Movies</title>
</head>
<body>
    <%- include('../patials/nav-bar.ejs')  %>
    
	<div class="container pt-4 text-center">
		<div class="btn-group btn-group-toggle " data-toggle="buttons">
			<label class="btn btn-secondary active">
			  <input type="radio" onclick="myFunction1()" checked> Now Showing
			</label>
			<label class="btn btn-secondary">
			  <input type="radio" onclick="myFunction2()" > Coming Soon
			</label>
		  </div>	
	</div>

    <div class="wrapper">
        <div class="container py-1">
            <%- messages() %> 
			<div class="" id="now">
				<%- include('movies_patials/movie_list.ejs')  %> 
			</div>
	  
			<div class="hide" id="comin">
			  
			</div> 		
        </div>
    </div>
	
    

</body>

<script>
	function myFunction1() {
       var x = document.getElementById("now");
       var y = document.getElementById("comin");
       x.classList.remove("hide");
       y.classList.add("hide");
    }

    function myFunction2() {
       var x = document.getElementById("now");
       var y = document.getElementById("comin");
       x.classList.add("hide");
       y.classList.remove("hide");
    }
</script>

</html>

