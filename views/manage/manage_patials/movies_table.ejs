


    <div  class="container">

          <div class="accordion" id="accordionExample">
            <div class="card">
              <div class="card-header " id="headingOne">
                
                <!-- <button class="btn btn-danger" type="button" data-toggle="collapse" data-target="#collapseOne<%= i  %>" aria-expanded="true" aria-controls="collapseOne">
                  Collapsible Group Item #<%= i  %>
                </button> -->
                <div class="row">
                  <div class="col-1"><h6>#</h6></div>
                  <div class="col-5"><a href="#"><h6>Name</h6></a></div>
                  <div class="col-2"><a href="#"><h6>Release Date</h6></a></div>
                </div>
              
            </div>
            </div>
            <% var i=1 %> 
            <% allMovie.forEach(allMovie => { %>
            <div class="card">
              <div class="card-header " id="headingOne">
                
                  <!-- <button class="btn btn-danger" type="button" data-toggle="collapse" data-target="#collapseOne<%= i  %>" aria-expanded="true" aria-controls="collapseOne">
                    Collapsible Group Item #<%= i  %>
                  </button> -->
                  <div class="row">
                    <div class="col-1"><h6><%=i %></h6></div>
                    <div class="col-5"><a class="text-dark" href="/movies/<%= allMovie._id %>?path=showtime"><%= allMovie.name %></a> </div>
                    <div class="col-2"><%= allMovie.date.toISOString().slice(0, 10) %></a> </div>
                    <div class="col-4 ">
                      <div class="button-groub">
                        <button class="btn btn-success" type="button" data-toggle="collapse" data-target="#collapseOne<%= i  %>" aria-expanded="true" aria-controls="collapseOne">Showtime</button>
                        
                        <!-- <button class="btn btn-warning">Edit</button> -->
                        <a class="btn btn-warning" href="movies/<%= allMovie._id %>/edit/">Edit</a>
                        
                          <form style="display: inline;" action="/movies/<%= allMovie._id %>?_method=DELETE" method="post">
                            <button class="btn btn-danger">Delete</button>
                          </form>
                        
                      </div>
                    </div>
                  </div>
                
              </div>
          
              <div id="collapseOne<%= i++ %>" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                  <div class="row">
                    <div class="col-12">
                      <form class="form-inline" action="/manage/movie/<%= allMovie._id %> " method="post">
                  
                        <div class="form-group mr-sm-2">
                          <label for="">Cinema : </label>
                          <select class="form-control" name="showtime[cinema]" id="">
                              <option selected>select</option>
                              <% allCinema.forEach(allCinema => { %>
                                <option value="<%= allCinema._id  %>"><%= allCinema.name  %> </option>       
                              <% }) %> 
                            </select>
                        </div>

                        <div class="form-group mr-sm-2">
                          <label for="">Theater : </label>
                          <select class="form-control" name="showtime[theater]" id="">
                              <option selected>select</option>
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                              <option value="4">4</option>
                            </select>
                        </div>
                        
                        
                        <div class="form-group">
                            <label for="">Time : </label>
                            <input class="form-control mr-sm-2" type="time" name="showtime[time]" id="">
                        </div>

                        <button class="btn btn-success">Add New</button>
                      </form>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-12">

                      <% allCinema.forEach(allCinema => { %>
                        
                        <h4><%= allCinema.name %></h4>
                        <% allMovie.showtimes.forEach(function(showtimes){  %> 
                        <% if(allCinema.name ==  showtimes.cinema.name){ %> 
                            <div class="btn-group">
                              <button type="button" disabled class="btn btn-warning"><%= showtimes.cinema.theater %> </button>
                              <!-- <button type="button" class="btn btn-info"><%= showtimes.time %> </button> -->
                              <a class="btn btn-info" href="/booking/<%= allMovie._id %>/<%= showtimes._id %>  "><%= showtimes.time %></a>
                              <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                            </div>
                          <% } %> 
                        <% }); %>

                      <% }); %>  

                      
                    </div>


                  </div>
                </div>
                
                

              </div>
              
            </div>
            <% }) %>
          </div>

    </div>

