<%- include('../patials/nav-bar.ejs')  %>

    <div class="container py-3 text-center">
        <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Movie Manager
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="/manage?path=allMovie">All Movies</a>
                <a class="dropdown-item" href="/manage?path=newMovie">Add new Movie</a>
            </div>
        </div>

        <div class="btn-group">
            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Cinema Manager
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="/manage?path=allCinema">All Cinemas</a>
                <a class="dropdown-item" href="/manage?path=newCinema">Add new Cinema</a>
            </div>
        </div>

        <div class="btn-group">
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                User Manager
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="">All Users</a>
            </div>
        </div>
    </div>

    <div class="wrapper">
        <div class="container">
            <h2 >Edit Movie :</h2>
            <%= messages() %> 
            <form action="/movies/<%= editThis._id %>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="">Movie's Name</label>
                    <input type="text" name="movie[name]" id="" class="form-control" placeholder="<%= editThis.name %>" value="<%= editThis.name %>"  >
                </div>
                <div class="form-group">
                    <label for="">Movie's Teaser</label>
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= editThis.teaser %> " allowfullscreen></iframe>
                    </div>
                    <input type="text" name="movie[teaser]" id="" class="form-control" value="<%= editThis.teaser %>" >
                </div>
                <div class="form-group">
                    <label for="">Movie's Genre</label>
                    <input type="text" name="movie[genre]" id="" class="form-control" placeholder="<%= editThis.genre %>" value="<%= editThis.genre %>" >
                </div>
                <div class="form-group">
                    <label for="">Movie's Rate</label>
                    <input type="text" name="movie[rate]" id="" class="form-control" placeholder="<%= editThis.rate %>" value="<%= editThis.rate %>">
                </div>
                <div class="form-group">
                    <label for="">Movie's Time</label>
                    <input type="text" name="movie[time]" id="" class="form-control" placeholder="<%= editThis.time %>" value="<%= editThis.time %>">
                </div>
                <div class="form-group">
                    <label for="">Movie's Synosis</label>
                    <textarea name="movie[synosis]" id="" cols="30" rows="5" class="form-control" placeholder="<%= editThis.synosis %>"><%= editThis.synosis %></textarea>
                </div>
                <div class="form-group">
                    <label for="">Movie's Director</label>
                    <input type="text" name="movie[director]" id="" class="form-control" placeholder="<%= editThis.director %>" value="<%= editThis.director %>">
                </div>
                <div class="form-group">
                    <label for="">Movie's Cast&Crew</label>
                    <input type="text" name="movie[cast]" id="" class="form-control" placeholder="<%= editThis.cast %>" value="<%= editThis.cast %>" >
                </div>
                <div class="form-group">
                    <label for="">Movie's Poster</label>
                    <img src="<%= editThis.poster %> " alt="">
                    <input type="file" name="poster" id="" class="form-control" accept="image/*" value="<%= editThis.poster %>" >

                </div>
                <!-- <div class="form-group">
                    <label for="">Movie's Release Date</label>
                    <input type="date" name="movie[date]" id="" class="form-control" value="<%= editThis.date %>" >
                </div> -->
                <input type="submit" value="Submit" class="btn btn-primary my-2">
                
            </form>
        </div>
    </div>

<script>
    $(function(){
        $('#messages').addClass('alert alert-success');
    })
</script>